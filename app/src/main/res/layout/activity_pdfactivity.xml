<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".PDFActivity">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:backgroundTint="@color/white"
        app:cardElevation="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter Details"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="30dp"/>

    </androidx.cardview.widget.CardView>
    <ScrollView
        android:layout_marginTop="55dp"
        android:layout_above="@+id/create_pdf"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Notice No."
                    android:textColor="@color/black"/>
                <EditText
                    android:backgroundTint="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:id="@+id/notice_no"
                    android:textColorHint="#60000000"
                    android:textSize="18dp"
                    android:hint="Enter Notice No."/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date"
                    android:textColor="@color/black"/>
                <EditText
                    android:backgroundTint="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textColorHint="#60000000"
                    android:textSize="18dp"
                    android:id="@+id/date"
                    android:hint="Enter Date"/>

            </LinearLayout>
            <LinearLayout
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Eligible Streams"
                    android:textColor="@color/black"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/streamslist_rec"
                    android:layout_marginTop="10dp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Eligible Branch"
                    android:textColor="@color/black"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/branchlist_rec"
                    android:layout_marginTop="10dp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Company"
                    android:textColor="@color/black"/>
                <EditText
                    android:backgroundTint="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textColorHint="#60000000"
                    android:textSize="18dp"
                    android:id="@+id/company"
                    android:hint="Enter Company Name"/>

            </LinearLayout>
            <LinearLayout
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Passout Year"
                    android:textColor="@color/black"/>
                <EditText
                    android:backgroundTint="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textColorHint="#60000000"
                    android:textSize="18dp"
                    android:id="@+id/passout_edit"
                    android:hint="Enter Passout Year"/>

            </LinearLayout>
            <LinearLayout
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Position"
                    android:textColor="@color/black"/>
                <EditText
                    android:backgroundTint="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textColorHint="#60000000"
                    android:textSize="18dp"
                    android:id="@+id/position"
                    android:hint="Enter Position"/>

            </LinearLayout>
            <LinearLayout
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CTC"
                    android:textColor="@color/black"/>
                <EditText
                    android:backgroundTint="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textColorHint="#60000000"
                    android:textSize="18dp"
                    android:id="@+id/ctc"
                    android:hint="Enter CTC"/>

            </LinearLayout>
            <LinearLayout
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DeadLine"
                    android:textColor="@color/black"/>
                <EditText
                    android:backgroundTint="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textColorHint="#60000000"
                    android:textSize="18dp"
                    android:id="@+id/deadline"
                    android:hint="Enter Deadline"/>

            </LinearLayout>
            <LinearLayout
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Registration Link"
                    android:textColor="@color/black"/>
                <EditText
                    android:backgroundTint="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textColorHint="#60000000"
                    android:textSize="18dp"
                    android:id="@+id/link"
                    android:hint="Enter link"/>

            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notice"
                android:textColor="@color/black"
                android:layout_marginLeft="15dp"/>
            <LinearLayout
                android:background="@drawable/border"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
              <EditText
                  android:layout_margin="10dp"
                  android:textAlignment="textStart"
                  android:hint="Enter Your Notice"
                  android:textColorHint="#60000000"
                  android:id="@+id/text"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:background="@null"
                  android:textSize="18dp"
                  android:textStyle="bold"
                  android:textColor="@color/black"
                  android:inputType="textMultiLine"/>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

<Button
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true"
    android:layout_marginBottom="10dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Create PDF"
    android:textSize="14dp"
    android:textColor="@color/white"
    android:layout_marginTop="2dp"
    android:background="@color/black"
    android:id="@+id/create_pdf"
    />
</RelativeLayout>